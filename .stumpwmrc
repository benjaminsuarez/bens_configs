;; jaderholm.com


(setf *window-format* "%m%n%s%c")
(setf *screen-mode-line-format*
      (list
       "[^B%n^b]" ;; group number
       " %W" ;; windows
       " ^>%d" ;; date
       " | %C |" ;; cpu
       ;; todo: add unread mail
       ;; todo: add pomodoro timer and pomodoro message
       " %B" ;; Battery
;;       " %I" ;; Wifi
       ))

(setf *time-modeline-string* "%a %b %e %k:%M")


